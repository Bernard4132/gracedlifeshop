<%= form_for(poster) do |f| %>
  <% if poster.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(poster.errors.count, "error") %> prohibited this poster from being saved:</h2>

      <ul>
      <% poster.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, :class => "form-control" %>
  </div>

  <div class="form-group">
    <label>Select category:</label><br>
   <%= f.collection_select :category_ids, Category.all, :id, :title, {prompt: "Select Category"}, 
    {:required => true, class: "select", style: "50%"} %>
  </div>

  <div class="form-group">
    <label>Select Author:</label><br>
   <%= f.collection_select :author_ids, Author.all, :id, :name, {prompt: "Select Author"}, 
    {:required => true, class: "select", style: "50%"} %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.trix_editor :description, :rows => "7", :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :posterimage %>
    <%= f.file_field :posterimage, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :price %>
    <%= f.number_field :price, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "Submit", :class => "btn btn-primary" %>
  </div>
<% end %>
